BoxLayout:
    orientation: 'vertical'

    MDToolbar:
        id: Toolbar
        title: 'Gardening Toolset'
        font_name: 'Fonts/Montserrat-Medium'
        md_bg_color: self.theme_cls.primary_dark
        specific_text_color: 1, 1, 1, 1
        right_action_items: [['settings', lambda x: print('Settings')]]


#TODO Create SettingsScreen and allow calling

    MDBottomNavigation:
        panel_color: self.theme_cls.primary_dark

        MDBottomNavigationItem:
            name: 'HomeScreen'
            text: 'Home'
            icon: 'home'

            MDLabel:
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "Resources/Images/home_1.jpg"
                mg_bg_color: .7, .7, .7, 1
                text: 'Home'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'PlantsScreen'
            text: 'Plants'
            icon: 'carrot'

            PlantsScreen

        MDBottomNavigationItem:
            name: 'TasksScreen'
            text: 'Tasks'
            icon: 'note-multiple'

            MDLabel:
                text: 'Tasks'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'WikiScreen'
