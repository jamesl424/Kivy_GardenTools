MDBoxLayout:
    id: root_widget
    orientation: 'vertical'

    MDToolbar:
        title: 'Gardening Tools'
        left_action_items: [["arrow-left", lambda x: app.callback()]]
        pos_hint: {'top': 1}
        size_hint_x: 1

    MDBottomNavigation:
        #panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'Screen 1'
            text: 'Home'
            icon: 'home'

            Home_Screen

        MDBottomNavigationItem:
            name: 'Screen 2'
            text: 'Plants'
            icon: 'carrot'

            Plants_Screen

        MDBottomNavigationItem:
            name: 'Screen 3'
            text: 'Tasks'
            icon: 'note-multiple'

            Tasks_Screen

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'JS'
            icon: 'language-javascript'

            MDLabel:
                text: 'JS'
                halign: 'center'
<Screen_Manager>:
    id: screen_manager
    size_hint_y: 1.0 - Toolbar.height/root.height

    Home_Screen
    Plants_Screen
    Tasks_Screen
    Wiki_Screen
    Settings_Screen


