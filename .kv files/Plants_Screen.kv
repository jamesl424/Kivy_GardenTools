<PlantsScreen>:
    on_enter: sm2.current = 'Plants_Home'
    ScreenManager:
        id: sm2
        Plants_Home:
        Screen2_1:
            name: 'Screen2_1'
        Screen2_2:
            name: 'Screen2_2'
            MDLabel:
                text: 'Screen2_2'
        Screen2_3:
        Screen2_4:

<Plants_Home>:
    name: 'Plants_Home'
    MDBoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        ScrollView:
            MDList:
                PlantsListContainer:
                    on_touch_down:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'Screen2_1'
                    PlantsListContent:
                        MDLabel:
                            text: 'Carrots'
                            theme_text_color: 'Custom'
                            text_color: [1, 1, 1, 1]



<Screen2_1>:
    name: 'Screen2_1'
    MDLabel:
        text: 'Screen2_1'
    MDTextButton:
        text: 'Back to home'
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'Plants_Home'



<Screen2_2>:

<Screen2_3>:

<Screen2_4>:

<PlantsListContainer>:
    size_hint: (None, None)
    height: '125'
    width: '500'
    orientation: 'vertical'
    border_radius:15
    canvas:
        RoundedRectangle:
            radius:[15,]
            pos: self.pos
            size: self.size
            source: "Resources/Images/carrots_1.jpg"
    MDSeparator:
        size_hint_y: 0.6
        radius:[15,]
        border_radius:15

<PlantsListContent>:
    orientation: 'vertical'
    radius:[15,]
    border_radius:15
    size_hint_y: 0.4
    md_bg_color: (.9, .9, .9, .3)