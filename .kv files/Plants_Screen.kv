<PlantsScreen>:
    on_enter: sm2.current = 'Plants_Home'
    ScreenManager:
        id: sm2


        Plants_Home:
        Apples:
            name: 'Apples'
        Carrots:
            name: 'Carrots'
        Screen2_2:
            name: 'Screen2_2'
            MDLabel:
                text: 'Screen2_2'
        Screen2_3:
        Screen2_4:

<Plants_Home>:
    name: 'Plants_Home'
    MDBoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        ScrollView:
            MDList:
                elevation: 10
                orientation: 'vertical'
                spacing: '10dp'

                ListLetters:                                                                                          #A
                    text: 'A'

                PlantsListContainer:                                                                                  ##
                    canvas:
                        RoundedRectangle:
                            radius:[15,]
                            pos: self.pos
                            size: self.size
                            source: "Resources/Images/apples_2.jpg"


                    MDSeparator:
                        size_hint_y: 0.6
                        radius:[15,]
                        border_radius:15

                    PlantsListContent:
                        PlantLabels:
                            text: 'Apples'                                                                            ##

                        MDIconButton:
                            icon: 'arrow-right-bold'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            on_press:
                                root.manager.transition.direction = 'left'
                                root.manager.current = 'Apples'


                ListLetters:                                                                                          #B
                    text: 'B'

                ListLetters:                                                                                          #C
                    text: 'C'

                PlantsListContainer:
                    canvas:
                        RoundedRectangle:
                            radius:[15,]
                            pos: self.pos
                            size: self.size
                            source: "Resources/Images/carrots_1.jpg"
                    MDSeparator:
                        size_hint_y: 0.6
                        radius:[15,]
                        border_radius:15

                    PlantsListContent:
                        PlantLabels:
                            text: 'Carrots'

                        MDIconButton:
                            icon: 'arrow-right-bold'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            on_press:
                                root.manager.transition.direction = 'left'
                                root.manager.current = 'Carrots'





<Screen2_2>:

<Screen2_3>:

<Screen2_4>:

<PlantsListContainer>:
    size_hint: (None, None)
    height: '125'
    width: '500'
    orientation: 'vertical'
    radius:[15,]
    border_radius:15


<PlantsListContent>:
    orientation: 'horizontal'
    radius:[15,]
    border_radius:15
    size_hint_y: 0.3
    md_bg_color: (.9, .9, .9, .3)
    padding: '20dp'

<ListLetters>:
    halign: 'center'
    font_size: '50dp'
    font_name: 'Fonts/Montserrat-Medium'
    size_hint: (1, None)
    height: '40dp'

<PlantLabels>:
    theme_text_color: 'Custom'
    text_color: [1, 1, 1, 1]

<Label_1>:
    font_name: 'Fonts/Montserrat-SemiBold'
    font_size: "18dp"
    halign: "center"
    valign: "middle"
    theme_text_color: "Custom"
    text_color: self.theme_cls.primary_color

<Label_2>:
    font_name: 'Fonts/Montserrat-Medium'
    font_size: "15dp"
    halign: "left"
    valign: "middle"
    size_hint: (1, None)
    size: self.texture_size
    theme_text_color: "Custom"
    text_color: self.theme_cls.primary_color

<Icon_1>:
    font_size: "15dp"
    halign: "center"
    valign: "middle"


