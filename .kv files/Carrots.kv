<Carrots>:
    name: 'Carrots'
    MDBoxLayout:
        id: exp_container
        orientation: 'vertical'


        MDCard:
            size_hint: (1, None)
            elevation: 10
            height: '125'
            orientation: 'vertical'
            pos_hint: {"center_x": .5, "center_y": .5}
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "Resources/Images/carrots_1.jpg"
            MDBoxLayout:
                orientation: 'horizontal'
                padding: '10dp'
                md_bg_color: (0.6, 0.6, 0.6, 0.4)
                MDIconButton:
                    icon: 'arrow-left'
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'Plants_Home'
                MDLabel:
                    text: 'Carrots'
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_size: '30dp'
                    font_name: 'Fonts/Montserrat-Medium'
        MDTabs:
            background_color: self.theme_cls.primary_light
            text_color_normal: 1, 1, 0, 1
            text_color_active: 1, 1, 0, 1
            elevation: 10

            Carrot_Wiki:
            Carrot_Guide
            Carrot_Plants:
            Carrot_Photos:

