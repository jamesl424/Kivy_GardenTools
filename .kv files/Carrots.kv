<Carrot_Guide>:
    text: 'Guide'
    ScrollView:
        MDList:
            orientation: 'vertical'

            MDCard:
                elevation: 0
                orientation: 'vertical'
                size_hint: (1, None)
                height: '120dp'


                MDLabel:
                    size_hint_y: None
                    height: '50dp'
                    text: 'Sowing'
                    font_name: 'Fonts/Montserrat-Medium'
                    font_size: '25dp'

                Label_2:
                    text: "- Sow thinly into finely raked/loose soil to a depth of 1/2"
                Label_2:
                    text: '- Seedlings thinned to roughly 2\" apart.'
                Label_2:
                    text: '- Rows kept 6" apart'

            MDCard:
                size_hint: (1, None)
                elevation: 10
                height: '211dp'
                orientation: 'vertical'
                pos_hint: {"center_x": .5, "center_y": .5}
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "Resources/Images/carrots_2.jpg"

            MDCard:
                elevation: 5
                orientation: 'vertical'
                size_hint: (1, None)
                height: '390dp'


                MDLabel:
                    size_hint_y: None
                    height: '50dp'
                    text: 'Growing'
                    font_name: 'Fonts/Montserrat-Medium'
                    font_size: '25dp'

                Label_2:
                    text: '- Ensure plants are watered frequently enough to prevent soil completely drying'
                Label_2:
                    text: '- Avoid over-watering, especially in the final stages of growth as this can cause rot/growth cracks.'
                Label_2:
                    text: '- Horticultural fleece can be used for early planters to protect from frost.  This can also protect from Carrot Fly'

                MDLabel:
                    size_hint_y: None
                    height: '50dp'
                    text: 'Containers'
                    font_name: 'Fonts/Montserrat-LightItalic'
                    font_size: '20dp'
                Label_2:
                    text: '- Sufficient depth for root development (dependant on variety)'
                Label_2:
                    text: '- Sufficient drainage to prevent stunted/forked growth'
                Label_2:
                    text: '- More frequent watering.  Mulch can be used to help maintain moisture'
                MDLabel:
                    size_hint_y: None
                    height: '50dp'
                    text: 'Open Ground'
                    font_name: 'Fonts/Montserrat-LightItalic'
                    font_size: '20dp'
                Label_2:
                    text: '- Well drained, stone free, ideally without clay for best growth area.)'
                Label_2:
                    text: '- Early cultivars covered with fleece/cloches.'
